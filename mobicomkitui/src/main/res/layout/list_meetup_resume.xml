<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:background="@drawable/ic_circle_outline"
                android:id="@+id/rl_gambar">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hadir"
                    android:textSize="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    android:id="@+id/status_meetup"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_profil"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:id="@+id/rl_judul_meetup">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Reuni 5 Tahun SMA N 1 Purwokerto"
                    android:textSize="17dp"
                    android:id="@+id/judul_meetup"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/rl_judul_meetup"
                android:id="@+id/rl_tanggal_meetup"
                android:layout_marginTop="7dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_date_meet"
                    android:id="@+id/img_date_meet"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/tanggal_meetup"
                    android:layout_toRightOf="@id/img_date_meet"
                    android:text="03 April 2017, 22:00 WIB"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rl_gambar"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/rl_tanggal_meetup"
                android:id="@+id/rl_tempat_meetup"
                android:layout_marginTop="7dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_loc_meet"
                    android:id="@+id/img_loc_meet"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_loc_meet"
                    android:text="Jl. Gatot Subroto no 76 Purwokerto"
                    android:textSize="12dp"
                    android:id="@+id/alamat_meetup"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>